<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingRight="@dimen/padding"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/square_stroke_colord"
        android:layout_marginTop="@dimen/margin_top2"
        android:layout_alignParentRight="true"
        android:id="@+id/ll">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/msg_hgt"
            android:textSize="@dimen/msg_txt_size"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:gravity="center"
            android:text="gdsssssssssssssssssssss"
            android:textColor="@color/black" />

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/mar_left"
        android:layout_below="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_user"
            android:text="svsnavsabnasv"
            android:textSize="@dimen/txt_email_date" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:layout_marginLeft="@dimen/mar_left"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_time"
            android:layout_marginLeft="@dimen/mar_left"
            android:text="svsnavsabnasv"
            android:textSize="@dimen/txt_email_date" />

        </LinearLayout>

</RelativeLayout>